@model NewsletterEmail
@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="~/css/Index.css" />
</head>
<main role="main">
    <div id="myCarousel" class="carousel slide mt-5 col-md-8 center" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="first-slide" src="~/img/10.jpg"
                     alt="First slide">
                <div class="container">
                    <div class="carousel-caption text-left">
                        <h1> CompraTudo.</h1>
                        <p>
                            Encontre tudo que desejar!!!
                        </p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="second-slide" src="~/img/11.jpg"
                     alt="Second slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1 >Compre com qualidade e conforto.</h1>
                        <p>
                            Aqui no CompraTudo você encontra os melhores produtos e preços!!!
                        </p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="third-slide" src="~/img/12.jpg"
                     alt="Third slide">
                <div class="container">
                    <div class="carousel-caption text-right">
                        <h1>Produtos de qualidade</h1>
                        <p>
                           Compre os melhores produtos do mercado
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!--Lisiting products-->
    <vc:listing-product></vc:listing-product>
</main>


@using (Html.BeginForm(null, null, null, FormMethod.Post, true, new { @action = @Url.Action("index", "home") + "#formNewsletter" }))
{
    <div class="container" id="formNewsletter">
        <div class="row">
            <div class="col-sm-8 offset-sm-3" style="text-align:center">
                @if (TempData["MSG_S_Newsletter"] != null)
                {
                    <p class="alert alert-success text-center col-md-10"><b>@TempData["MSG_S_Newsletter"]</b></p>
                }
            </div>
        </div>
        <div class="row">

            <div class="col-sm-6 offset-sm-2">
                <div class="form-group">
                    <label for="name">Cadastre seu email e receba promoções</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                        </div>
                        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <span style="color:red">@Html.ValidationMessageFor(m => m.Email)</span>
                </div>
            </div>
            <div class="col-sm-2">
                <button class="subscribe btn btn-block btn btn-info" type="submit" id="registerNewsletter"> Cadastrar </button>
            </div>
        </div>
    </div>
}



